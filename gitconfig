[user]
	name = Stanimir Patarinski
	email = stanimir_patarinski@epam.com

[push]
  default = tracking

[color]
  diff = auto
  status = auto
  branch = auto

[core]
  excludesfile = ~/.gitignore
  autocrlf = false
  whitespace = cr-at-eol
  editor = nvim

[format]
  pretty = %Cblue%h%Creset %Cgreen[%cr]%Creset (%an) %s

[alias]
  c = commit -m
  cam = commit --amend
  b = branch
  rb = rebase
  ch = cherry-pick
  co = checkout
	cod = checkout dev
	coD = checkout Development
  pr = pull --rebase
  a = add
  bl = branch -r
  d = diff
  dic = diff --cached
  ps = push
  s = status
  out = log origin..HEAD
  qpl = log --pretty=\"%Cblue%h%Creset %Cgreen[%cr]%Creset %s\" origin/production..origin/master
  l = log --all --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset %Cblue%an%Creset' --abbrev-commit --date=relative
  ci = commit
  ca = commit --amend
  catchup = "!git fetch origin; git rebase origin/master"
  rbd = "!git fetch origin; git rebase origin/dev"
  rbdl = "!git fetch origin; git rebase origin/Development"
  rbm = "!git fetch origin; git rebase origin/master"
  # Alternate log display from Scott Chacon
  lol = log --pretty=oneline --abbrev-commit --graph --decorate
  sub = submodule update --init

  # Other useful aliases:
  unstage = reset HEAD
  staged = diff --cached
  unstaged = diff

  jshint = "!gulp jshint --files=\"{`git diff --name-only | tr '\n' ','`}\""

[branch]
  autosetuprebase = always

[merge]
  tool = fugitive

[mergetool "fugitive"]
  cmd = gvim -f -c \"Gdiff\" \"$MERGED\"

[mergetool]
  keepBackup = false

[diff]
  algorithm = patience
