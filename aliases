#!/bin/zsh

alias g="git"
alias npmd="npm run start:dev"
alias npms="npm start"
alias rmnm="rm -rf node_modules"
alias rmnmi="rm -rf node_modules && npm i"
alias rmnmn="rmnmi && node install.dev.js"
alias rmnmnr="rmnmn && node recompile.js"
alias gc="git clean -xdf && cd orderapi-ui/mercator-sdk &&  rmnmn"
alias gcxdf="git clean -xdf"
alias gcr="gc && node recompile.js"
alias ...="../../"
alias ....="../../../"

case `uname -a` in
  *Linux*)
    alias unsafe-chrome='chromium-browser --disable-web-security';
    alias tmux="tmux -2";
    alias ack='ack-grep';
    alias v="vim";
    alias ls='ls --color=auto';;
  *Darwin*)
    alias unsafe-chrome='open /Applications/Google\ Chrome.app --args --disable-web-security';
    alias tmux="tmux -2 -u";
    alias vim="mvim -v"
    # what?
    ;;
esac

alias ll='ls -la'
